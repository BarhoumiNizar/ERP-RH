{%if res_annee>=2 %}
	{%if res_mois==0 %}
	
    {%set solde_conge=null%}
     {%else%}
	   {%set solde_conge=res_mois*2.5%}
	 {%endif%}

{%endif%}

 {%if res_annee<2 %}
      {%set tot=res_annee*12 %}
		  {%if res_mois==0 %}
		
		  {%set solde_conge=tot*2.5%}
		   {%else%}
		   {%set res_total=tot+res_mois%}
		   {%set solde_conge=res_total*2.5%}
		 {%endif%}
	  
	 
{%endif%}

{#L'etat: {{etat_conge.etat}}<br>
Nombre des jours demandé: {{nb_demande}}#}
{%if etat_conge.etat=='valider'%}
{%set solde_conge=solde_conge-nb_demande%}
